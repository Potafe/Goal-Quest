<% layout('layout') %>

<div class="container py-5">
  <h2 class="text-center" style="font-family: 'Poppins', sans-serif; font-weight: bold; color: #343a40;">
    Task Categories
  </h2>
  <p class="text-center mb-4" style="font-family: 'Poppins', sans-serif; color: #6c757d;">
    Choose a category to view and manage your tasks.
  </p>
  
  <div class="row justify-content-center">
    <% categories.forEach(category => { %>
      <div class="col-md-4 col-sm-6 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-body text-center">
            <h5 class="card-title" style="font-family: 'Poppins', sans-serif; color: #007bff;">
              <%= category.name %>
            </h5>
            <a href="/categories/<%= category.id %>/urgencies" class="btn btn-outline-primary rounded-pill mt-3"
              style="font-family: 'Poppins', sans-serif; font-size: 0.9rem;"
            >
              View Tasks
            </a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>
